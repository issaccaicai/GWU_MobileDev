<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp">
    <TextView
        android:textColor="@color/black"
        android:id="@+id/Garage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University Student Center Garage"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/garage1_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/garage1" />

        <LinearLayout
            android:id="@+id/garage1_layout_details1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/garage1_img"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/address_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Garage1_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/Garage1_RatingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="0dp"
                    android:numStars="5"
                    android:rating="3.5" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/garage1_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/Garage1_address_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 800 21st St, NW" />
            </LinearLayout>

            <TextView
                android:id="@+id/Garage1_address_details2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrance on H St near 21st St"
                android:textColor="#D4D4D4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Garage1_Permits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permit"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Garage1_Permit_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GWorld Debit/Monthly" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>


